```{r setup, include=FALSE}
library(flexdashboard)
library(shiny)
library(tidyverse)
df <- vroom::vroom('https://covid.ourworldindata.org/data/owid-covid-data.csv')

confirmed_color <- "purple"
active_color <- "#1f77b4"
recovered_color <- "forestgreen"
death_color <- "red"
env <- "master"
